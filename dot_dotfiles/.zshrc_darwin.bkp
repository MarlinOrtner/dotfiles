#zmodload zsh/zprof
zrccompile() {
  local zfile=$1
  if [[ ! -f "${zfile}.zwc" || "$zfile" -nt "${zfile}.zwc" ]]; then
    zcompile "$zfile"
  fi
}

zrccompile "$HOME/.zshrc"
