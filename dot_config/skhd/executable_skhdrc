#Administration
ctrl + alt + cmd - y : aerospace reload-config;aerospace flatten-workspace-tree && terminal-notifier -title "aerospace" -message "Aerospace config reloaded"
ctrl + alt + cmd - r : killall AeroSpace; open -n /Applications/AeroSpace.app

# Navigation
ctrl + alt + cmd - h : aerospace focus dfs-prev
ctrl + alt + cmd - l : aerospace focus dfs-next


# Moving windows
shift + ctrl + alt + cmd - h : aerospace move left
shift + ctrl + alt + cmd - l : aerospace move right

# Hide window
cmd - m: aerospace macos-native-minimize

shift + ctrl + alt + cmd - 1 : aerospace move-node-to-workspace 1 --focus-follows-window
shift + ctrl + alt + cmd - 2 : aerospace move-node-to-workspace 2 --focus-follows-window
shift + ctrl + alt + cmd - 3 : aerospace move-node-to-workspace 3 --focus-follows-window
shift + ctrl + alt + cmd - 4 : aerospace move-node-to-workspace 4 --focus-follows-window
shift + ctrl + alt + cmd - 5 : aerospace move-node-to-workspace 5 --focus-follows-window
shift + ctrl + alt + cmd - 6 : aerospace move-node-to-workspace 6 --focus-follows-window
shift + ctrl + alt + cmd - 7 : aerospace move-node-to-workspace 7 --focus-follows-window
shift + ctrl + alt + cmd - 8 : aerospace move-node-to-workspace 8 --focus-follows-window
shift + ctrl + alt + cmd - 9 : aerospace move-node-to-workspace 9 --focus-follows-window
shift + ctrl + alt + cmd - 0 : aerospace move-node-to-workspace 10 --focus-follows-window

ctrl + alt + cmd - k : aerospace resize smart +100
ctrl + alt + cmd - j : aerospace resize smart -100


ctrl + alt + cmd - space : aerospace layout floating tiling
ctrl + alt + cmd - f         : aerospace fullscreen
ctrl + alt + cmd - tab         : aerospace workspace-back-and-forth

# Change space
ctrl + alt + cmd - 1 : aerospace workspace 1
ctrl + alt + cmd - 2 : aerospace workspace 2
ctrl + alt + cmd - 3 : aerospace workspace 3
ctrl + alt + cmd - 4 : aerospace workspace 4
ctrl + alt + cmd - 5 : aerospace workspace 5
ctrl + alt + cmd - 6 : aerospace workspace 6
ctrl + alt + cmd - 7 : aerospace workspace 7
ctrl + alt + cmd - 8 : aerospace workspace 8
ctrl + alt + cmd - 9 : aerospace workspace 9
ctrl + alt + cmd - 0 : aerospace workspace 10

#Move Window to another monitor/display
ctrl + alt + cmd - right : aerospace move-workspace-to-monitor next --wrap-around 
ctrl + alt + cmd - left : aerospace move-workspace-to-monitor prev --wrap-around 



cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
# cmd + shift - return : /bin/bash -c "~/.config/aerospace/dropdown-terminal.sh toggle"
cmd + shift - return : /Applications/kitty.app/Contents/MacOS/kitten quick-access-terminal 
#cmd + return : osascript -e 'tell application "iTerm2" to create window with default profile command ""' || open -na iTerm

