{{- if eq .chezmoi.os "linux" -}}
{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "{{ .chezmoi.homeDir }}/.config/fastfetch/panda.png",
    "type": "kitty-icat",
    "height": 18,
    "padding": {
      "top": 2
    }
  },
  "display": {
    "separator": "  ",
    "color": {
      "keys": "magenta"
    },
    "size": {
      "binary_prefix": "si"
    }
  },
  "modules": [
    "break",
    "title",
    {
      "type": "separator",
      "string": "─"
    },
    {
      "type": "os",
      "key": " OS",
      "keyColor": "blue"
    },
    {
      "type": "host",
      "key": "󰌢 PC",
      "keyColor": "green"
    },
    {
      "type": "kernel",
      "key": " Kernel",
      "keyColor": "magenta"
    },
    {
      "type": "uptime",
      "key": "󰅐 Uptime",
      "keyColor": "red"
    },
    {
      "type": "packages",
      "key": "󰏖 Packages",
      "keyColor": "yellow"
    },
    {
      "type": "shell",
      "key": " Shell",
      "keyColor": "cyan"
    },
    {
      "type": "de",
      "key": " DE",
      "keyColor": "blue"
    },
    {
      "type": "wm",
      "key": " WM",
      "keyColor": "blue"
    },
    {
      "type": "terminal",
      "key": " Terminal",
      "keyColor": "green"
    },
    "break",
    {
      "type": "cpu",
      "key": " CPU",
      "keyColor": "magenta"
    },
    {
      "type": "gpu",
      "key": "󰒆 GPU",
      "keyColor": "red"
    },
    {
      "type": "memory",
      "key": "󰍛 Memory",
      "keyColor": "yellow"
    },
    {
      "type": "swap",
      "key": "󰓡 Swap",
      "keyColor": "yellow"
    },
    {
      "type": "disk",
      "key": " Disk",
      "keyColor": "cyan"
    },
    {
      "type": "localip",
      "key": "󰩟 Local IP",
      "showIpv6": true,
      "compact": true,
      "keyColor": "blue"
    },
    "break",
    "colors"
  ]
}
{{- else -}}
{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "kitty-icat",
    "source": "{{ .chezmoi.homeDir }}/.config/fastfetch/panda.png",
    "height": 20,
    "width": 30,
    "position": "left",
    "padding": {
      "top": 3,
      "right": 3
    }
  },
  "display": {
    "separator": " "
  },
  "modules": [
    "break",
    {
      "type": "custom",
      "format": "┌─────────────Hardware─────────────┐",
      "outputColor": "cyan"
    },
    {
      "type": "host",
      "key": " PC ",
      "keyColor": "red"
    },
    {
      "type": "cpu",
      "key": "│ ├ ",
      "keyColor": "red"
    },
    {
      "type": "gpu",
      "key": "│ ├󰒆 ",
      "keyColor": "red"
    },
    {
      "type": "disk",
      "key": "│ ├ ",
      "folders": "/",
      "format": "{size-used} / {size-total} ({size-percentage})",
      "keyColor": "red"
    },
    {
      "type": "swap",
      "key": "│ ├SW",
      "keyColor": "red"
    },
    {
      "type": "display",
      "key": "│ ├ ",
      "keyColor": "red",
      "format": "MONITOR ({name})"
    },
    {
      "type": "memory",
      "key": "└ └󰍛 ",
      "keyColor": "red"
    },
    {
      "type": "custom",
      "format": "└──────────────────────────────────┘",
      "outputColor": "cyan"
    },
    {
      "type": "custom",
      "format": "┌─────────────Software─────────────┐",
      "outputColor": "cyan"
    },
    {
      "type": "os",
      "key": "􀣺 OS ",
      "keyColor": "green"
    },
    {
      "type": "kernel",
      "key": "│ ├ ",
      "keyColor": "green"
    },
    {
      "type": "packages",
      "key": "│ ├󰏖 ",
      "keyColor": "green"
    },
    {
      "type": "shell",
      "key": "└ └ ",
      "keyColor": "green"
    },
    {
      "type": "de",
      "key": " DE ",
      "keyColor": "blue"
    },
    {
      "type": "lm",
      "key": "│ ├ ",
      "keyColor": "blue"
    },
    {
      "key": "│ ├ ",
      "keyColor": "blue",
      "type": "command",
      "text": "pgrep AeroSpace &> /dev/null && echo AeroSpace `aerospace -v | awk '/aerospace CLI client version:/ {print $5}'`|| echo Quartz Compositor"
    },
    {
      "type": "terminal",
      "key": "│ ├ ",
      "keyColor": "blue"
    },
    {
      "type": "terminalfont",
      "key": "└ └ ",
      "keyColor": "blue"
    },
    {
      "type": "custom",
      "format": "└──────────────────────────────────┘",
      "outputColor": "cyan"
    },
    {
      "type": "custom",
      "format": "┌──────────────Uptime──────────────┐",
      "outputColor": "cyan"
    },
    {
      "type": "uptime",
      "key": "  Uptime",
      "keyColor": "magenta"
    },
    {
      "type": "custom",
      "format": "└──────────────────────────────────┘",
      "outputColor": "cyan"
    }
  ]
}
{{- end -}}
